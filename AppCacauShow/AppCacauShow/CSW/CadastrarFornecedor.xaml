                                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>

                                                </Border>

                                                <ControlTemplate.Triggers>

                                                    <MultiTrigger>

                                                        <MultiTrigger.Conditions>

                                                            <Condition Property="IsMouseOver" Value="True"/>

                                                        </MultiTrigger.Conditions>

                                                        <Setter Property="Background"
                                                            TargetName="Bd"
                                                            Value="#404D5B"/>

                                                        <Setter Property="BorderBrush"
                                                            TargetName="Bd"
                                                            Value="#404D5B"/>

                                                    </MultiTrigger>

                                                </ControlTemplate.Triggers>

                                            </ControlTemplate>

                                        </Setter.Value>

                                    </Setter>

                                </Style>
                            </Button.Style>

                            <!--Funcionários Icon-->

                            <Image Source="/Imagens/func.png"
                                Width="84" Height="74"/>



                        </Button>

                        <!--Button Caixa-->
                        <Button x:Name="Caixa"  
                            Background="{x:Null}" 
                            BorderBrush="{x:Null}"
                            Height="90" >


                            <!--// Tooltip //-->

                            <Button.ToolTip>

                                <ToolTip x:Name="tt_Caixa"
                                    Content="Caixa"
                                    Style="{StaticResource tt_style}"/>

                            </Button.ToolTip>

                            <Button.Style>
                                <Style TargetType="{x:Type Button}">

                                    <Setter Property="Template">

                                        <Setter.Value>

                                            <ControlTemplate TargetType="{x:Type Button}">

                                                <Border x:Name="Bd"
                                                    Height="90"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}"
                                                    SnapsToDevicePixels="True">

                                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>

                                                </Border>

                                                <ControlTemplate.Triggers>

                                                    <MultiTrigger>

                                                        <MultiTrigger.Conditions>

                                                            <Condition Property="IsMouseOver" Value="True"/>

                                                        </MultiTrigger.Conditions>

                                                        <Setter Property="Background"
                                                            TargetName="Bd"
                                                            Value="#404D5B"/>

                                                        <Setter Property="BorderBrush"
                                                            TargetName="Bd"
                                                            Value="#404D5B"/>

                                                    </MultiTrigger>

                                                </ControlTemplate.Triggers>

                                            </ControlTemplate>

                                        </Setter.Value>

                                    </Setter>

                                </Style>
                            </Button.Style>

                            <!--Funcionários Icon-->

                            <Image Source="/Imagens/fluxo-de-caixa.png"
                                Width="69" Height="64"/>



                        </Button>


                        <!--// Button Sair //-->
                        <Button Background="{x:Null}" BorderBrush="{x:Null}"  Height="90" 
                                      >

                            <!--// Tooltip //-->

                            <Button.ToolTip>

                                <ToolTip x:Name="tt_sair1"
                                    Content="Sair"
                                    Style="{StaticResource tt_style}"/>

                            </Button.ToolTip>

                            <Button.Style>
                                <Style TargetType="{x:Type Button}">

                                    <Setter Property="Template">

                                        <Setter.Value>

                                            <ControlTemplate TargetType="{x:Type Button}">

                                                <Border x:Name="Bd"
                                                    Height="90"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}"
                                                    SnapsToDevicePixels="True">

                                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>

                                                </Border>

                                                <ControlTemplate.Triggers>

                                                    <MultiTrigger>

                                                        <MultiTrigger.Conditions>

                                                            <Condition Property="IsMouseOver" Value="True"/>

                                                        </MultiTrigger.Conditions>

                                                        <Setter Property="Background"
                                                            TargetName="Bd"
                                                            Value="#404D5B"/>

                                                        <Setter Property="BorderBrush"
                                                            TargetName="Bd"
                                                            Value="#404D5B"/>

                                                    </MultiTrigger>

                                                </ControlTemplate.Triggers>

                                            </ControlTemplate>

                                        </Setter.Value>

                                    </Setter>

                                </Style>
                            </Button.Style>

                            <!--Sair-->

                            <Image Source="/Imagens/img_signout.png"
                                Height="70" Width="80"/>


                        </Button>



                    </StackPanel>

                </StackPanel>


            </Grid>

            <Label Content="Cadastrar Fornecedor" Margin="411,39,55,0" VerticalAlignment="Top" Foreground="White" FontFamily="Arial" FontSize="40" Height="70" Width="NaN"/>
            <TextBox HorizontalAlignment="Left" Margin="135,164,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="573" Height="45"/>
            <Label Content="Cnpj:" HorizontalAlignment="Left" Margin="739,114,0,0" VerticalAlignment="Top" Foreground="White" FontSize="25" RenderTransformOrigin="1.074,2.556"/>
            <Label Content="E-mail:" HorizontalAlignment="Left" Margin="136,229,0,0" VerticalAlignment="Top" Foreground="White" FontSize="25"/>
            <Label Content="Contato:" HorizontalAlignment="Left" Margin="726,219,0,0" VerticalAlignment="Top" Foreground="White" FontSize="25" RenderTransformOrigin="1,0.417"/>
            <TextBox HorizontalAlignment="Left" Margin="140,269,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="520" Height="45"/>
            <TextBox HorizontalAlignment="Left" Margin="730,264,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="430" Height="45" />
            <Label Content="Endereço:" HorizontalAlignment="Left" Margin="135,334,0,0" VerticalAlignment="Top" Foreground="White" FontSize="25" RenderTransformOrigin="0.932,0.533"/>
            <TextBox HorizontalAlignment="Left" Margin="140,379,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="680" Height="45" />
            <Label Content="Nome:" HorizontalAlignment="Left" Margin="132,121,0,0" VerticalAlignment="Top" Foreground="White" FontSize="25"/>
            <TextBox HorizontalAlignment="Left" Margin="745,159,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="415" Height="45"/>
            <Label Content="CEP:" HorizontalAlignment="Left" Margin="862,339,0,0" VerticalAlignment="Top" Foreground="White" FontSize="25"/>
            <TextBox HorizontalAlignment="Left" Margin="865,379,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="295" Height="45" />
            <Label Content="Bairro:" HorizontalAlignment="Left" Margin="134,451,0,0" VerticalAlignment="Top" Foreground="White" FontSize="25"/>
            <TextBox HorizontalAlignment="Left" Margin="140,489,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="390" Height="45" />
            <Label Content="UF:" HorizontalAlignment="Left" Margin="585,451,0,0" VerticalAlignment="Top" Foreground="White" FontSize="25" RenderTransformOrigin="1.027,0.417"/>
            <Label Content="Cidade:" HorizontalAlignment="Left" Margin="888,451,0,0" VerticalAlignment="Top" Foreground="White" FontSize="25"/>
            <TextBox HorizontalAlignment="Left" Margin="590,489,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="265" Height="45" />
            <TextBox HorizontalAlignment="Left" Margin="895,489,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="265" Height="45" />
            <Button HorizontalAlignment="Left" Margin="1020,639,0,0" VerticalAlignment="Top" Height="75" Width="155" BorderBrush="Black" RenderTransformOrigin="0.667,-0.999" FontSize="35" Content="Salvar"/>

        </Grid>
        <Button HorizontalAlignment="Left" Margin="810,639,0,0" VerticalAlignment="Top" Height="75" Width="155" BorderBrush="Black" FontSize="35" Content="Cancelar" RenderTransformOrigin="0.667,-0.999"/>





    </Grid>
</Window>

